// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"features": {
		"ghcr.io/devcontainers/features/azure-cli:1": {
			"installBicep": true,
			"version": "latest",
			"bicepVersion": "latest"
		},
		"ghcr.io/devcontainers/features/powershell:1": {
			"version": "7.4"
		},
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "lts"
		}
	},

	// Install Azure PowerShell module after container is created
	// "postCreateCommand": "pwsh -Command 'Install-Module -Name Az -Repository PSGallery -Force -AllowClobber -Scope CurrentUser'",
	"postCreateCommand": "curl -LsSf https://astral.sh/uv/install.sh | sh",
	"postStartCommand": "$HOME/.local/bin/uv tool install specify-cli --from git+https://github.com/github/spec-kit.git",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"GitHub.copilot-chat",
				"ms-azuretools.vscode-bicep"
			]
		}
	}

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
